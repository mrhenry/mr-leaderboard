<h1>Login</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <div>
    <%= f.error_messages %>
  </div>
  <div>
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </div>
  <%= f.submit "Login" %>
<% end %>

<p><%= link_to "Back to tha root", root_url %></p>